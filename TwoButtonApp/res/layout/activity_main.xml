<?xml version="1.0" encoding="utf-8"?>

	<LinearLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent" >
    	
	<TextView 
    	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:text="www.dublinbraces.ie. \r\n \r\n Welcome to the Newpark Orthodontics Android app. \r\n \r\n \r\n \r\n"
    	android:padding="10dp"
    	android:textColor="#FFFFFF"
    	android:layout_weight="1"
        android:orientation="horizontal" />

		<Button
 			android:id="@+id/buttonWebsite"
 			android:layout_width="match_parent"
 			android:layout_height="0dp"
 			android:layout_weight="1"
 			android:text="Visit our website."/>

		<Button
 			android:id="@+id/buttonContact"
 			android:layout_width="match_parent"
 			android:layout_height="0dp"
 			android:layout_weight="1"
 			android:text="Contact us:"/>
		
		<Button
 			android:id="@+id/buttonDirections"
 			android:layout_width="match_parent"
 			android:layout_height="0dp"
 			android:layout_weight="1"
 			android:text="Get directions to a clinic."/>
		
	</LinearLayout>