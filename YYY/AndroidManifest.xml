<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.osgo.yyy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.osgo.yyy.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.osgo.yyy.TrendingActivity"
            android:label="@string/title_activity_trending" >
            <intent-filter>
                <action android:name="com.osgo.yyy.TRENDING" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.osgo.yyy.LatestActivity"
            android:label="@string/title_activity_latest" >
            <intent-filter>
                <action android:name="com.osgo.yyy.LATEST" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.osgo.yyy.GalleriesActivity"
            android:label="@string/title_activity_galleries" >
            <intent-filter>
                <action android:name="com.osgo.yyy.GALLERIES" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
                
    </application>

</manifest>